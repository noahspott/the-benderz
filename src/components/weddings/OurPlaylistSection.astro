---
/**
 * The Benderz Playlist
 *
 * Relume Component: Layout300
 */

// Global Components
import { Button } from "@relume_io/relume-ui";
import { Image } from "astro:assets";

// Images
import top40 from "../../assets/images/genre-images/top-40.svg";
import weddingClassics from "../../assets/images/genre-images/the-classics.svg";
import clubStaples from "../../assets/images/genre-images/club-staples.svg";
import rockSingalongs from "../../assets/images/genre-images/rock-singalongs.svg";
import bgImage from "../../assets/images/patterns/layered-peaks-accent-100.svg";

// Content
const kicker = "The Benderz Playlist";
const headline = "Our Playlist has something for everyone.";
const body =
  "Our goal is to get your party on the dance floor. That's why we pride ourselves on our diverse setlist from 'September' to 'Mr. Brightside'.";

const cards = [
  {
    image: top40,
    title: "Top 40 Hits",
    description: "To keep your friends singing ðŸŽ¤",
    alt: "Top 40 Hits",
  },
  {
    image: weddingClassics,
    title: "Wedding Classics",
    description: "To keep your parents happy ðŸ˜‰",
    alt: "Wedding Classics",
  },
  {
    image: clubStaples,
    title: "Club Staples",
    description: "To keep the dance floor moving ðŸ•º",
    alt: "Club Staples",
  },
  {
    image: rockSingalongs,
    title: "Rock Singalongs",
    description: "To keep the party rockin' ðŸŽ¸",
    alt: "Rock Singalongs",
  },
];

const buttons = [
  {
    title: "View Playlist",
    href: "/playlist",
  },
  {
    title: "View Schedule",
    href: "/schedule",
  },
];
---

<section
  id="the-benderz-playlist"
  class="relative overflow-hidden px-[5%] py-16 md:py-24 lg:py-28"
>
  <Image
    src={bgImage}
    alt="Layered Peaks Accent 100"
    class="absolute inset-0 z-0 h-full w-full object-cover opacity-30"
  />
  <div class="container relative z-10">
    <div class="flex flex-col items-start">
      <div
        class="mx-auto mb-12 w-full max-w-lg items-start justify-between gap-5 md:mb-18 lg:mb-20"
      >
        <p class="kicker-dark mb-3 text-center md:mb-4">{kicker}</p>
        <h2
          class="mb-5 text-center font-heading text-5xl md:mb-6 md:text-7xl lg:text-8xl"
        >
          {headline}
        </h2>
        <p class="text-center font-body text-neutral-dark md:text-md">
          {body}
        </p>
      </div>
      <div
        class="grid grid-cols-1 items-start gap-y-8 sm:grid-cols-2 sm:gap-x-4 sm:gap-y-4 lg:grid-cols-4"
      >
        {
          cards.map((card) => {
            return (
              <div class="group h-full w-full overflow-hidden rounded-xl bg-white transition-all duration-300 hover:shadow-large">
                <div class="relative overflow-hidden md:h-2/5">
                  <Image
                    src={card.image}
                    alt={card.alt}
                    class="h-full w-full object-cover object-center transition-transform duration-300 group-hover:scale-105"
                  />
                </div>
                <div class="p-6 md:p-5">
                  <h3 class="mb-3 text-center font-heading text-4xl sm:text-2xl md:mb-4 md:text-4xl lg:text-2xl xl:text-4xl">
                    {card.title}
                  </h3>
                  <p class="text-center font-body text-md text-neutral-dark/80 md:text-lg lg:text-md xl:text-lg">
                    {card.description}
                  </p>
                </div>
              </div>
            );
          })
        }
      </div>
      <div
        class="mt-12 flex w-full flex-wrap items-center justify-center gap-4 md:mt-18 lg:mt-20"
      >
        <Button
          title="View Playlist"
          variant="secondary"
          className="button-secondary"
        >
          <a href={buttons[0].href}>{buttons[0].title}</a>
        </Button>
        <Button
          title="View Schedule"
          variant="link"
          size="link"
          className="button-link"
        >
          <a href={buttons[1].href}>{buttons[1].title}</a>
        </Button>
      </div>
    </div>
  </div>
</section>
