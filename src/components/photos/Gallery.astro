---
/**
 * Gallery Component
 * src/components/photos/Gallery.astro
 */

// Tools
import { Image } from "astro:assets";

// Images
import photo1 from "../../assets/images/gallery/the-benderz-angelique-buckley-singer.jpg";
import photo2 from "../../assets/images/gallery/the-benderz-joe-veltri-keyboard.jpeg";
import photo3 from "../../assets/images/gallery/jayce-bradley-headbang-bottle-and-cork-mdw-2025.jpg";
import photo4 from "../../assets/images/gallery/the-benderz-john-zadeh-drums.jpg";
import photo5 from "../../assets/images/gallery/the-benderz-on-a-couch.jpg";
import photo6 from "../../assets/images/gallery/angelique-buckley-bottle-and-cork-mdw-2025.jpg";
import photo7 from "../../assets/images/gallery/angelique-and-jayce-the-benderz-mdw-2025.jpg";
import photo8 from "../../assets/images/gallery/bottle-and-cork-crowd-mdw-2025.jpg";
import photo9 from "../../assets/images/gallery/angelique-buckley-the-benderz-bottle-and-cork-mdw-2025.jpg";

// Constants
const photos = [
  {
    src: photo1,
    alt: "Angelique Buckley rocking out",
  },
  {
    src: photo2,
    alt: "Joe Veltri playing the keyboard",
  },
  {
    src: photo7,
    alt: "Angelique Buckley and Jayce Bradley onstage at the Bottle and Cork on Memorial Day Weekend 2025",
  },
  {
    src: photo6,
    alt: "Angelique Buckley singing onstage at the bottle and cork in Dewey Beach, DE",
  },
  {
    src: photo3,
    alt: "Jayce Bradley playing the guitar",
  },
  {
    src: photo4,
    alt: "John Zadeh playing the drums",
  },
  {
    src: photo5,
    alt: "The Benderz on a couch",
  },
  {
    src: photo8,
    alt: "Bottle and Cork crowd on Memorial Day Weekend in Dewey Beach, DE",
  },
  // {
  //   src: photo6,
  //   alt: "Jayce Bradley at the Bottle & Cork Memorial Day Weekend 2025",
  // },
  {
    src: photo9,
    alt: "Angelique Buckley onstage at the Bottle & Cork on Memorial Day Weekend 2025",
  },
];
---

<section id="image-gallery" class="px-[5%] py-16 md:py-24 lg:py-28">
  <div class="container">
    <ul
      class="grid grid-cols-2 items-start justify-center gap-6 md:gap-8 xl:grid-cols-3"
    >
      {
        photos.map((photo) => {
          return (
            <li class="aspect-square overflow-hidden">
              <Image
                src={photo.src}
                alt={photo.alt}
                class="h-full w-full object-cover"
                widths={[150, 400, 500, 600, 700]}
                sizes="100%"
              />
            </li>
          );
        })
      }
    </ul>
  </div>
</section>
