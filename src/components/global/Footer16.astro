---
import { Image } from "astro:assets";
import footerBg from "../../assets/images/footer-bg.svg";

import {
  BiLogoFacebookCircle,
  BiLogoInstagram,
  BiLogoYoutube,
} from "react-icons/bi";

interface Footer16Props {
  logoSrc?: string;
  bigLogoSrc?: string;
  companyName: string;
  newsletterText: string;
  links: {
    whatWeDo: { text: string; href: string }[];
    moreInfo: { text: string; href: string }[];
    followUs: { text: string; href: string }[];
  };
  footerText: string;
  policies: { text: string; href: string }[];
  footerImageSrc: string;
}

const {
  logoSrc = "",
  bigLogoSrc = "",
  companyName,
  newsletterText,
  links,
  footerText,
  policies,
  footerImageSrc,
} = Astro.props as Footer16Props;
---

<footer id="footer" class="relative px-[5%] py-12 md:py-18 lg:py-20">
  <div class="container">
    <div
      class="grid grid-cols-1 gap-x-[8vw] gap-y-12 pb-8 md:gap-y-16 md:pb-10 lg:grid-cols-[0.75fr_1fr] lg:gap-y-4 lg:pb-12"
    >
      <div class="flex flex-col">
        <a href="/" class="mb-5 md:mb-6">
          <img src={logoSrc} alt="" class="h-10" />
        </a>
        <p class="mb-5 md:mb-6">{footerText}</p>
        {
          /* <p class="mb-5 md:mb-6">{newsletterText}</p>
            <div class="w-full max-w-md">
              <form
                class="mb-3 grid grid-cols-1 gap-x-4 gap-y-3 sm:grid-cols-[1fr_max-content] md:gap-y-4"
                onSubmit={formState.handleSubmit}
              >
                <Input
                  id="email"
                  type="email"
                  placeholder="Enter your email"
                  value={formState.email}
                  onChange={formState.handleSetEmail}
                />
                <Button
                  title="Subscribe"
                  variant="secondary"
                  size="sm"
                  class="button-secondary"
                >
                  Subscribe
                </Button>
              </form>
              <p class="text-xs">
                By subscribing, you agree to our Privacy Policy and consent to
                updates.
              </p>
            </div> */
        }
      </div>
      <div
        class="grid grid-cols-1 items-start gap-y-10 sm:grid-cols-3 sm:gap-x-6 md:gap-x-8 md:gap-y-4"
      >
        <div class="flex flex-col items-start justify-start">
          <h2 class="heading-nav mb-3 font-heading md:mb-4">What We Do</h2>
          <ul class="flex flex-col items-start">
            {
              links.whatWeDo.map((link, index) => (
                <li class="py-2 text-sm">
                  <a href={link.href} class="flex items-center gap-3 font-body">
                    <span>{link.text}</span>
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
        <div class="flex flex-col items-start justify-start">
          <h2 class="heading-nav mb-3 font-heading md:mb-4">More Info</h2>
          <ul class="flex flex-col items-start">
            {
              links.moreInfo.map((link, index) => (
                <li class="py-2 text-sm">
                  <a href={link.href} class="flex items-center gap-3 font-body">
                    <span>{link.text}</span>
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
        <div class="flex flex-col items-start justify-start">
          <h2 class="heading-nav mb-3 font-heading md:mb-4">Follow us</h2>
          <ul class="flex flex-col items-start">
            {
              links.followUs.map((link, index) => (
                <li class="py-2 text-sm">
                  <a href={link.href} class="flex items-center gap-3 font-body">
                    {link.text === "Facebook" ? (
                      <BiLogoFacebookCircle className="size-6" />
                    ) : link.text === "Instagram" ? (
                      <BiLogoInstagram className="size-6" />
                    ) : link.text === "Youtube" ? (
                      <BiLogoYoutube className="size-6" />
                    ) : null}
                    <span>{link.text}</span>
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>
    {
      /* <div class="pb-8 md:pb-10 lg:pb-12">
          <a href="/" class="w-full">
            {bigLogoSrc ? (
              <img src={bigLogoSrc} alt="Company image" class="w-full" />
            ) : (
              <span class="text-center text-[10rem] font-black">
                {companyName}
              </span>
            )}
          </a>
        </div> */
    }
    <div class="h-px w-full bg-black"></div>
    <div
      class="flex flex-col-reverse items-start justify-between pb-4 pt-6 text-sm md:flex-row md:items-center md:pb-0 md:pt-8"
    >
      <p class="mt-6 md:mt-0"></p>
      <a
        href="https://summitavenueweb.com"
        target="_blank"
        class="font-body text-sm"
      >
        Developed by{" "}
        <span class="font-semibold">Summit Avenue Web Solutions</span>
      </a>
    </div>
  </div>
  <div class="absolute bottom-0 left-0 -z-10 size-full">
    <Image src={footerBg} alt="Footer image" class="h-full object-cover" />
  </div>
</footer>
