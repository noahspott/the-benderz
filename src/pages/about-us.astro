---
// Components
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import { TitleHeaderSubpage, ContactSection, Faqs } from "../components";
import MeetTheBenderz from "../components/about-us/MeetTheBenderz.astro";
import MeetOurTeam from "../components/about-us/MeetOurTeam.astro";

// Images
import faqBackgroundImage from "../assets/images/patterns/polygon-scatter-accent-100.svg";

// Content
const headline = "About Us";
const description =
  "The Benderz captivate audiences with unforgettable performances, bringing together music lovers through an eclectic mix of genres. ðŸ•º";
const contactHeading = "Say Hello ðŸ‘‹";
const aboutUsFaqBody =
  "Discover answers to your most pressing questions about booking The Benderz for your event.";

import { ABOUT_PAGE_FAQS } from "../data/faqs";
---

<Layout title="About Us | The Benderz" description={description}>
  <TitleHeaderSubpage headline={headline} description={description} />
  <MeetTheBenderz />
  <MeetOurTeam />
  <Faqs faqs={ABOUT_PAGE_FAQS} body={aboutUsFaqBody} client:load>
    <Image
      src={faqBackgroundImage}
      alt=""
      class="absolute inset-0 z-0 h-full object-cover opacity-20"
      style={{
        objectPosition: "90% center",
      }}
    />
  </Faqs>
  <ContactSection client:load heading={contactHeading} />
</Layout>
