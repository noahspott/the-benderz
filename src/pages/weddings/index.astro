---
// WEDDING PAGE

// Global components
import Layout from "../../layouts/Layout.astro";

// Local components
import HeroSubpage from "../../components/global/HeroSubpage.astro";
import AboutVideoSection from "../../components/global/AboutVideoSection";
import WeddingServicesSection from "../../components/weddings/WeddingServicesSection.astro";
import OurPlaylistSection from "../../components/weddings/OurPlaylistSection.astro";
import { Faq3 } from "../../components/weddings/Faq3";
import { Contact2 } from "../../components/weddings/Contact2";

// Types
import type { Link } from "../../types/types";

// Images
import backgroundImage from "../../assets/images/hero-2.jpg";

// Copy
const kicker = "Wedding Band • Philadelphia";
const headline = '"Our friends still tell us - we had the Best Wedding Band!"';
const body =
  "We're not just another wedding band. Our show is a high-energy performance that will keep your guests dancing all night long.";
const buttons: Link[] = [
  { title: "Book Now", href: "/contact" },
  { title: "View Schedule", href: "/schedule" },
];

// FAQS
const faqBody =
  "Find answers to your most common questions about booking The Benderz for your wedding.";
const faqs = [
  {
    question: "What genres do you play?",
    answer:
      "The Benderz cover a wide range of genres, including rock, pop, R&B, and country. We pride ourselves on our versatility and can tailor our setlist to match your wedding theme.",
  },
  {
    question: "How long do you play?",
    answer:
      "Our standard performance length is typically 4 hours, including breaks. We can customize the duration based on your event's needs. Just let us know your schedule, and we’ll accommodate!",
  },
  {
    question: "Do you provide equipment?",
    answer:
      "Yes, we bring all necessary sound and lighting equipment for our performances. Our team ensures everything is set up and ready before your guests arrive. You can focus on enjoying your special day while we handle the music!",
  },
  {
    question: "Can we request songs?",
    answer:
      "Absolutely! We encourage couples to provide us with a list of their favorite songs. This helps us create a personalized experience that reflects your taste and style.",
  },
  {
    question: "How do we book?",
    answer:
      "Booking The Benderz is simple! Just reach out through our contact form, and we'll get back to you promptly. We look forward to making your wedding unforgettable!",
  },
];
---

<Layout>
  <!-- Hero -->
  <HeroSubpage
    headline={headline}
    body={body}
    kicker={kicker}
    buttons={buttons}
    imageMetaData={backgroundImage}
  />

  <!-- Video Section -->
  <AboutVideoSection client:load />

  <!-- Our Wedding Services -->
  <WeddingServicesSection />

  <!-- The Benderz Playlist -->
  <OurPlaylistSection />

  <!-- FAQ -->
  <Faq3 faqs={faqs} body={faqBody} client:load />

  <!-- Contact -->
  <Contact2 client:load />
</Layout>
