---
/**
 * Testimonials Page
 * src/pages/testimonials.astro
 *
 * This page is used to display testimonials from clients.
 */

// Components
import Layout from "@/layouts/Layout.astro";
import { TitleHeaderSubpage, ContactSection } from "@/components";
import { Testimonial18 } from "@/components/testimonials/Testimonial18";

// Data
import { seo } from "@/data/seo";

// Content
const content = {
  header: {
    heading: "Testimonials",
    body: "Hear what people are saying about The Benderz",
  },
  contactSection: {
    heading: "Let's Turn Your Event Into a Party",
    body: "",
  },
};
---

<Layout seo={seo.testimonials}>
  <TitleHeaderSubpage
    headline={content.header.heading}
    description={content.header.body}
  />
  <Testimonial18 />
  <ContactSection client:load heading={content.contactSection.heading} />
</Layout>
