---
/**
 * Testimonials Page
 * src/pages/testimonials.astro
 *
 * This page is used to display testimonials from clients.
 */

// Global Components
import Layout from "../layouts/Layout.astro";
import { TitleHeaderSubpage, ContactSection } from "../components";

// Local Components
import { Testimonial18 } from "../components/testimonials/Testimonial18";

// Page Data
const headline = "Testimonials";
const description = "Hear what people are saying about The Benderz";
const contactHeading = "Let's Turn Your Event Into a Party";
---

<Layout
  title="Testimonials | The Benderz"
  description="Hear what people are saying about The Benderz"
>
  <TitleHeaderSubpage headline={headline} description={description} />
  <Testimonial18 />
  <ContactSection client:load heading={contactHeading} />
</Layout>
