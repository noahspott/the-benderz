---
/**
 * Testimonials Page
 * src/pages/testimonials.astro
 *
 * This page is used to display testimonials from clients.
 */

// Global Components
import Layout from "../layouts/Layout.astro";
import Header46 from "../components/global/Header46.astro";
import ContactSection from "../components/global/ContactSection";

// Local Components
import { Testimonial18 } from "../components/testimonials/Testimonial18";

// Page Data
const headline = "Testimonials";
const description = "Hear what people are saying about The Benderz";
const contactHeading = "Contact Us";
---

<Layout>
  <Header46 headline={headline} description={description} />
  <Testimonial18 />
  <ContactSection client:load heading={contactHeading} />
</Layout>
