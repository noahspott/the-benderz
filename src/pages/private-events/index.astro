---
/**
 * Private Events Page
 * src/pages/private-events/index.astro
 *
 * A page to sell the band for private events.
 */

// Global Components
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import HeroSubpage from "../../components/global/HeroSubpage.astro";
import AboutVideoSection from "../../components/global/AboutVideoSection.tsx";
import { ContactSection } from "../../components/global/ContactSection";

// Local Components
import EventTypes from "../../components/private-events/EventTypes.astro";
import { Layout306 } from "../../components/private-events/Layout306";
import { Testimonial4 } from "../../components/private-events/Testimonial4";
import { Faq3 } from "../../components/private-events/Faq3";

// Types
import type { Link } from "../../types/types";

// Images
import backgroundImage from "../../assets/images/hero-1.jpg";
import eventTypesImage from "../../assets/images/angelique-buckley-with-crowd-at-ocean-drive.jpg";

// Copy
const kicker = "Corporate Events & Private Parties";
const headline =
  "High Energy Live Music for Your Corporate Event or Private Party";
const body =
  "Make your private party or corporate event unforgettable with The Benderz, the party band that keeps your guests singing and dancing all night long.";
const buttons: Link[] = [
  { title: "Book Now", href: "/contact" },
  { title: "View Schedule", href: "/schedule" },
];
---

<Layout>
  <HeroSubpage
    headline={headline}
    body={body}
    kicker={kicker}
    buttons={buttons}
    imageMetaData={backgroundImage}
  />
  <AboutVideoSection client:load />
  <EventTypes />
  <Layout306 />
  <Testimonial4 />
  <Faq3 />
  <ContactSection
    client:load
    heading="Get in Touch"
    body="Need a party band for your club, private event, or wedding? Let's talk!"
  />
</Layout>
