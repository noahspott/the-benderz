---
/**
 * Wedding Page
 * src/pages/weddings.astro
 *
 * A page to sell the band for weddings.
 */

// Global components
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";

// Local components
import { HeroSubpage, AboutVideoSection, Faqs } from "../components";
import { Contact2 } from "../components/weddings/Contact2";
import WeddingServicesSection from "../components/weddings/WeddingServicesSection.astro";
import OurPlaylistSection from "../components/weddings/OurPlaylistSection.astro";

// Types
import type { Link } from "../types/types";

// Images
import backgroundImage from "../assets/images/hero-2.jpg";
import faqBackgroundImage from "../assets/images/patterns/polygon-scatter-accent-100.svg";

// Copy
const kicker = "Wedding Band â€¢ Philadelphia";
const headline = '"Our friends still tell us - we had the Best Wedding Band!"';
const body =
  "We're not just another wedding band. Our show is a high-energy performance that will keep your guests dancing all night long.";
const buttons: Link[] = [
  { title: "Book Now", href: "/contact" },
  { title: "View Schedule", href: "/schedule" },
];

const weddingSectionCopy = {
  kicker: "The Wedding Party",
  headline: "We bring the shore party vibe to every wedding.",
  body: "For over a decade, The Benderz have been creating the nightlife soundtrack for the best clubs in Atlantic City, Sea Isle City, Dewey Beach, and more. Our specialty is packaging that energy and delivering it to you on your special night.",
};

const faqBody =
  "Find answers to your most common questions about booking The Benderz for your wedding.";

import { WEDDING_PAGE_FAQS } from "../data/faqs";
---

<Layout
  title="High Energy Wedding Band Philadelphia | The Benderz"
  description={body}
>
  <!-- Hero -->
  <HeroSubpage
    headline={headline}
    body={body}
    kicker={kicker}
    buttons={buttons}
    imageMetaData={backgroundImage}
  />

  <!-- Video Section -->
  <AboutVideoSection {...weddingSectionCopy} client:load />

  <!-- Our Wedding Services -->
  <WeddingServicesSection />

  <!-- The Benderz Playlist -->
  <OurPlaylistSection />

  <!-- FAQ -->
  <Faqs faqs={WEDDING_PAGE_FAQS} body={faqBody} client:load>
    <Image
      src={faqBackgroundImage}
      alt=""
      class="absolute inset-0 z-0 h-full object-cover opacity-20"
      style={{
        objectPosition: "90% center",
      }}
      widths={[320, 640, 960, 1280, 1600, 1920]}
      sizes="100vw"
    />
  </Faqs>

  <!-- Contact -->
  <Contact2 client:load />
</Layout>
