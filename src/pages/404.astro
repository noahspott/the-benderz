---
/**
 * 404
 * src/pages/404.astro
 *
 */

// Components
import Layout from "../layouts/Layout.astro";
import { HeroSubpage, ContactSection } from "../components";

// Images
import backgroundImage from "../assets/images/hero-1.jpg";

// Data
import { seo } from "@/data/seo";

export const prerender = true;
---

<Layout seo={seo.notFound} class="bg-white">
  <HeroSubpage
    kicker="404"
    headline="Page not found"
    body="The page you are looking for does not exist."
    imageMetaData={backgroundImage}
  />
  <ContactSection
    heading="Need help?"
    body="For more information, please contact us."
    client:load
  />
</Layout>
