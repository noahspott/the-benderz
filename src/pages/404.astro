---
/**
 * 404
 * src/pages/404.astro
 *
 */

import Layout from "../layouts/Layout.astro";
import HeroSubpage from "../components/global/HeroSubpage.astro";
import { ContactSection } from "../components/global/ContactSection";

// Images
import backgroundImage from "../assets/images/hero-1.jpg";

export const prerender = true;
---

<Layout>
  <HeroSubpage
    kicker="404"
    headline="Page not found"
    body="The page you are looking for does not exist."
    imageMetaData={backgroundImage}
  />
  <ContactSection
    heading="Need help?"
    body="For more information, please contact us."
    client:load
  />
</Layout>
