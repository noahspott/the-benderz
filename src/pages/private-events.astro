---
/**
 * Private Events Page
 * src/pages/private-events/index.astro
 *
 * A page to sell the band for private events.
 */

// Global Components
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import {
  HeroSubpage,
  AboutVideoSection,
  ContactSection,
  Faqs,
  TestimonialSimple,
  WhatWePlay,
} from "../components";

// Local Components
import EventTypes from "../components/private-events/EventTypes.astro";

// Types
import type { Link } from "../types/types";

// Images
import backgroundImage from "../assets/images/hero-1.jpg";
import faqBackgroundImage from "../assets/images/patterns/polygon-scatter-accent-100.svg";

// Copy
const kicker = "Corporate & Private Events";
const headline =
  "High Energy Live Music for Your Corporate Event or Private Party";
const body =
  "Make your private party or corporate event unforgettable with The Benderz, the party band that keeps your guests singing and dancing all night long.";
const buttons: Link[] = [
  { title: "Book Now", href: "/contact" },
  { title: "View Schedule", href: "/schedule" },
];

const weddingSectionCopy = {
  kicker: "Your Party, But Better",
  headline: "We bring the shore party vibe to every event we play",
  body: "For over a decade, The Benderz have been creating the nightlife soundtrack for the best clubs in Atlantic City, Sea Isle City, Dewey Beach, and more. Our specialty is packaging that energy and delivering it to you for your event.",
};

const privateEventsFaqBody =
  "Discover answers to your most pressing questions about booking The Benderz for your event.";

const privateEventsFaqs = [
  {
    question: "What types of events?",
    answer:
      "The Benderz are perfect for a variety of private events, including weddings, corporate parties, and anniversaries. Our versatile repertoire ensures that we can cater to any musical taste, keeping your guests entertained. Whatever the occasion, we bring the energy and excitement to make it unforgettable.",
  },
  {
    question: "How do I book?",
    answer:
      "Booking The Benderz is simple! Just reach out through our contact form or give us a call. We’ll discuss your event details and work to secure your date.",
  },
  {
    question: "What is the cost?",
    answer:
      "Our pricing varies based on the event type, location, and duration. We offer competitive rates to ensure you get the best value for your entertainment. Contact us for a personalized quote tailored to your needs.",
  },
  {
    question: "Can we choose songs?",
    answer:
      "Absolutely! We encourage clients to provide a list of favorite songs and genres. Our goal is to create a playlist that resonates with you and your guests. Let us know your preferences, and we’ll make it happen!",
  },
  {
    question: "What is the setup?",
    answer:
      "We typically require a minimum of 2 hours for setup before the event starts. Our team will handle all equipment and sound checks to ensure everything runs smoothly. Just provide us with the space, and we’ll take care of the rest!",
  },
  {
    question: "Do you provide equipment?",
    answer:
      "Yes, we bring all necessary sound and lighting equipment for our performances. Our team ensures everything is set up and ready before your guests arrive. You can focus on enjoying your special day while we handle the music!",
  },
  {
    question: "Do you have a backup plan?",
    answer:
      "Yes, we always have a backup plan in case of unexpected issues. We ensure that we can continue the show seamlessly, keeping your guests entertained and engaged.",
  },
];
---

<Layout>
  <HeroSubpage
    headline={headline}
    body={body}
    kicker={kicker}
    buttons={buttons}
    imageMetaData={backgroundImage}
  />
  <AboutVideoSection {...weddingSectionCopy} client:load />
  <EventTypes />
  <WhatWePlay />
  <TestimonialSimple />
  <Faqs faqs={privateEventsFaqs} body={privateEventsFaqBody} client:load>
    <Image
      src={faqBackgroundImage}
      alt=""
      class="absolute inset-0 z-0 h-full object-cover opacity-20"
      style={{
        objectPosition: "90% center",
      }}
      widths={[320, 640, 960, 1280, 1600, 1920]}
      sizes="100vw"
    />
  </Faqs>
  <ContactSection
    client:load
    heading="Get in Touch"
    body="Book The Benderz for your next event. We'll make sure your party is unforgettable."
  />
</Layout>
