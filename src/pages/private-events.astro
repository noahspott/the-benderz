---
/**
 * Private Events Page
 * src/pages/private-events/index.astro
 *
 * A page to sell the band for private events.
 */

// Global Components
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import {
  HeroSubpage,
  AboutVideoSection,
  ContactSection,
  Faqs,
  TestimonialSimple,
  WhatWePlay,
} from "../components";

// Local Components
import EventTypes from "../components/private-events/EventTypes.astro";

// Types
import type { Link } from "../types/types";

// Images
import backgroundImage from "../assets/images/hero-1.jpg";
import faqBackgroundImage from "../assets/images/patterns/polygon-scatter-accent-100.svg";

// Copy
const kicker = "Corporate & Private Events";
const headline =
  "High Energy Live Music for Your Corporate Event or Private Party";
const body =
  "Make your private party or corporate event unforgettable with The Benderz, the party band that keeps your guests singing and dancing all night long.";
const buttons: Link[] = [
  { title: "Book Now", href: "/contact" },
  { title: "View Schedule", href: "/schedule" },
];

const weddingSectionCopy = {
  kicker: "Your Party, But Better",
  headline: "We bring the shore party vibe to every event we play",
  body: "For over a decade, The Benderz have been creating the nightlife soundtrack for the best clubs in Atlantic City, Sea Isle City, Dewey Beach, and more. Our specialty is packaging that energy and delivering it to you for your event.",
};

const privateEventsFaqBody =
  "Discover answers to your most pressing questions about booking The Benderz for your event.";

import { PRIVATE_EVENT_PAGE_FAQS } from "../data/faqs";
---

<Layout>
  <HeroSubpage
    headline={headline}
    body={body}
    kicker={kicker}
    buttons={buttons}
    imageMetaData={backgroundImage}
  />
  <AboutVideoSection {...weddingSectionCopy} client:load />
  <EventTypes />
  <WhatWePlay />
  <!-- <TestimonialSimple /> -->
  <Faqs faqs={PRIVATE_EVENT_PAGE_FAQS} body={privateEventsFaqBody} client:load>
    <Image
      src={faqBackgroundImage}
      alt=""
      class="absolute inset-0 z-0 h-full object-cover opacity-20"
      style={{
        objectPosition: "90% center",
      }}
      widths={[320, 640, 960, 1280, 1600, 1920]}
      sizes="100vw"
    />
  </Faqs>
  <ContactSection
    client:load
    heading="Get in Touch"
    body="Book The Benderz for your next event. We'll make sure your party is unforgettable."
  />
</Layout>
