---
/**
 * Photos Page
 *
 * This page displays a gallery of photos for The Benderz.
 * It also includes a contact section for booking the band.
 */

// Components
import Layout from "../layouts/Layout.astro";
import { TitleHeaderSubpage, ContactSection } from "../components";
import Gallery from "../components/photos/Gallery.astro";

// Header
const headline = "Photos";
const description = "Photos of the sickest band on the planet.";

// Contact Section
const contactHeading = "Like what you see?";
const contactBody = "Reach out to book The Benderz for your next event!";
---

<Layout>
  <TitleHeaderSubpage headline={headline} description={description} />
  <Gallery />
  <ContactSection client:load heading={contactHeading} body={contactBody} />
</Layout>
