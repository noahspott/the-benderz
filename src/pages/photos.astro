---
/**
 * Photos Page
 *
 * This page displays a gallery of photos for The Benderz.
 * It also includes a contact section for booking the band.
 */

// Components
import Layout from "@/layouts/Layout.astro";
import Gallery from "@/components/photos/Gallery.astro";
import { TitleHeaderSubpage, ContactSection } from "@/components";

// Data
import { seo } from "@/data/seo";

// Content
const content = {
  header: {
    heading: "Photos",
    body: "Photos of the sickest band on the planet. ðŸ˜‰",
  },
  contactSection: {
    heading: "Like what you see?",
    body: "Reach out to book The Benderz for your next event!",
  },
};
---

<Layout seo={seo.photos}>
  <TitleHeaderSubpage
    headline={content.header.heading}
    description={content.header.body}
  />
  <Gallery />
  <ContactSection
    client:load
    heading={content.contactSection.heading}
    body={content.contactSection.body}
  />
</Layout>
